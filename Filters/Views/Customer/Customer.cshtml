
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Registrar Pacientes
            </button>

        </div><!-- /.container-fluid -->
        <br />
        <div id="messageSuccess" class="text-center text-capitalize text-bold"></div>
        <div class="table-responsive-sm">
            <table class="table" id="idTable">
                <caption>Lista De Pacientes</caption>
                <thead>

                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">1er Apellido</th>
                        <th scope="col">2do Apellido</th>
                        <th scope="col">Genero</th>
                        <th scope="col">Estado Civil</th>
                        <th scope="col">CEDULA</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">ARS</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody id="itemTable">
                    @if (ViewBag.listing != null)
                    {


                        @foreach (var item in ViewBag.listing)
                        {

                            <tr>

                                <td id="jsname">@item.Name</td>
                                <td id="jslastName">@item.LastName</td>
                                <td id="jsmotherLastName">@item.MotherLastName</td>
                                <td id="jsgender"> @item.Gender</td>
                                <td id="jscivilStatus">@item.CivilStatus</td>
                                <td id="jscivilStatus">@item.Dni</td>
                                <td id="jsdni">@item.Phone</td>
                                <td id="jsphone">@item.Address</td>
                                <td id="jsname">
                                    @if (@item.Ars == 1)
                                    {
                                        <span class="text-green"><strong>Si</strong></span>
                                    }
                                    else
                                    {
                                        <span class="text-red">No</span>
                                    }
                                </td>
                                <td>

                                    <button onclick="IdSaves(@item.IdCustomer); EditCustomerModal('@item.Name','@item.LastName','@item.MotherLastName','@item.Gender','@item.CivilStatus','@item.Dni','@item.Phone','@item.Address','@item.Ars')"
                                            data-toggle="modal" data-target="#updateModal" class="btn btn-outline-warning">
                                        Editar
                                    </button>
                                </td>
                                <td>

                                    <input type="hidden" name="idHidden" value="{@item.IdCustomer}" />
                                    <button onclick="IdSaves(@item.IdCustomer)" data-toggle="modal" data-target="#deleteModal" class="btn btn-outline-danger">
                                        Eliminar
                                    </button>
                                    <!-- Modal eliminar-->
                                    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header text-center">
                                                    <h5 class="modal-title  text-red" id="exampleModalLabel">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                        Eliminando Registro
                                                    </h5>

                                                </div>
                                                <form onclick="stopDefAction(event);">

                                                    <div class="modal-body text-center">
                                                        <h5>
                                                            Estas a punto de ELIMINAR este registro.
                                                        </h5>
                                                        <p class="text-red">Esta accion no es REVERSIBLE!!.</p>
                                                        <p>Si estas seguro de lo que intentas realizar presiona Eliminar.</p>

                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary  row-cols-sm-3"
                                                                data-dismiss="modal">
                                                            Cancelar
                                                        </button>
                                                        <button type="submit" class="btn btn-danger  col-sm-9" onclick="SendId()">
                                                            Eliminar Registro
                                                        </button>

                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>


                                </td>




                            </tr>

                        }
                    }


                </tbody>
            </table>

        </div>
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <!-- /.content -->
</div><!-- fin del contenedor -->
<!-- Modal Crear nuevo cliente-->
